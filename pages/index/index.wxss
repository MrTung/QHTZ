/**index.wxss**/

.container {
    background: #fff;
} 


.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: white;
}

.usermotto {
  margin-top: 200px;
}

.topview{
  width: 100%;
  height: 250rpx;
  background-color: rgb(68,68,68);
  display: flex;
  flex-direction: row;
}

.topview-item{
  margin-top: 45rpx;
  height: 55rpx;
  font-size: 15px;
  display: flex;
  flex-direction: column;
  flex: 1;
  color: white;
  align-items: center;
}

.topview-item-money{
  font-weight: bold;
  margin-top: 20px;
  height: 40px;
  font-size: 18px;
  display: flex;
  flex-direction: column;
  flex: 1;
  color: white;
  align-items: center;
  margin-bottom: 5px;
}

.middle-view{
  width: 90%;
  height: 60px;
  text-align: left;
  font-size: 20px;
  /* font-weight: bold; */
  line-height: 60px;
  margin-left: 30px;
}

.shortcut-container {
  display: flex;
  height: 160rpx;
  /* position: relative; */
  /* flex-shrink: 0; */
  width: 100%;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background-color: white;
  /* border-bottom: solid 20rpx #eeeeee; */
}


.shortcut-view {
  display: flex;
  height: 140rpx;
  flex-direction: column;
  justify-content: center;
  vertical-align: center;
}

.shortcut-icon {
  width: 80rpx;
  height: 80rpx;
  align-self: center;
}

.shortcut-title {
  font-style: normal;
  font-size: 24rpx;
  margin-top: 10rpx;
  align-self: center;
  color: gray;
}


