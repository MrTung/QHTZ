<view class="container" scroll-y>

 <form bindsubmit="formSubmit">
    <view class='address-box' style='margin-top:15rpx;'>
      <view class='rowitem'>
        <view class="arrow">真实姓名 </view>
        <input  placeholder='请输入真实姓名' name="userName"  value="{{userName}}" style='text-align:right' />
      </view>
    </view>
    <view class='address-box coupon-box'>
      <view class='rowitem'>
        <view class="arrow">身份证号</view>
        <input  placeholder='请输入身份证号' name="idCardNo"  value="{{idCardNo}}" style='text-align:right' />
      </view>
    </view>
    <view class='imgview'>
      <image  class="image" src="{{img1}}" mode="aspectFit" data-idx="1" bindtap="chooseImage"></image>
      <image  class="image" src="{{img2}}" mode="aspectFit" data-idx="2" bindtap="chooseImage"></image>
    </view>
    <button type="warn" class='button' formType="submit"> 确认提交 </button>

  </form>


</view>