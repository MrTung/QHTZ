.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  position: relative;
}


.address-box {
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  padding-right: 30rpx;
  width: 100%;
  margin-bottom: 2rpx;
  font-size: 28rpx;
  color: #000;
  height: 100rpx;
  line-height: 100rpx;
  background-color: white;
  position: relative;
  justify-content: space-between;
  align-items: center;
}

.topview {
  padding-left: 30rpx;
  padding-right: 30rpx;
  width: 92%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: solid 1rpx #eee;
}

.rowitem{
  display: flex;
  flex-direction: row;
  align-items: center;
  width:95%;
  justify-content:space-between;
}

.arrow {
  display: flex;
  flex-direction: row;
  padding-left: 20px;
}

.button{
  width: 90%;
}

.imgview{
  text-align: center;
  /* display: flex; */
  flex-direction: column;
  position: relative;
  height: 550px;
  width: 100%;
}

.image{
  margin-top: 10px;
  width:280px;
}
